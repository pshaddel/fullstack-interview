{
	"name": "eversports-fullstack-interview",
	"version": "1.0.0",
	"description": "technical assessment for the fullstack developer interview",
	"main": "index.js",
	"scripts": {
		"start": "npm run build && node dist/index.js",
		"start:dev": "tsc-watch --onSuccess \"node dist/index.js\"",
		"dev": "tsc-watch --onSuccess \"node dist/index.js\"",
		"build": "tsc",
		"serve": "node dist/index.js",
		"test": "npm run build && NODE_ENV=test node --test dist/tests/*.test.js",
		"test:watch": "NODE_ENV=test tsc-watch --onSuccess \"node --test dist/tests/*.test.js\"",
		"format:check": "biome check",
    "format": "biome format --write",
    "test:coverage": "NODE_ENV=test c8 node --test dist/tests/*.test.js"
	},
	"author": "",
	"license": "ISC",
	"dependencies": {
		"express": "^4.19.2",
		"uuid": "^10.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.4",
		"@types/express": "^4.17.21",
		"@types/jest": "^29.5.12",
		"@types/node": "^22.0.0",
		"@types/supertest": "^6.0.2",
    "c8": "10.1.3",
		"jest": "^29.7.0",
		"supertest": "^7.0.0",
		"ts-jest": "^29.2.3",
		"ts-node": "^10.9.2",
		"tsc-watch": "7.1.1",
		"typescript": "^5.5.4"
	}
}
